{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "Build NES rom",
			"command": "cl65 -v -g --ld-args '--dbgfile,flowerforce.dbg' main.s -C config.cfg -o flowerforce.nes"
		},
		{
			"type": "shell",
			"dependsOn": "Build NES rom",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "Run in Mesen",
			"command": "mesen flowerforce.nes",
			"osx": {
				"command": "echo 9f637a7a; crc32 flowerforce.nes; open -n /Applications/Mesen.app --args ~/Documents/GitHub/sack-of-flour/flowerforce.nes"
			},
			"windows": {
				"command": "start flowerforce.nes"
			}
		}
	]
}
