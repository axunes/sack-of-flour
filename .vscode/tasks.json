{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build NES ROM",
			"command": "cl65 -g -Wl --dbgfile,sack.dbg sack.s -C config.cfg"
		},
		{
			"dependsOn": "Build NES ROM",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "Print checksum",
			"command": "echo 9f637a7a; crc32 sack.nes"
		},
		{
			"type": "shell",
			"dependsOn": "Print checksum",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "Run",
			"command": "mesen sack.nes",
			"osx": {
				"command": "open -n sack.nes"
			},
			"windows": {
				"command": "start sack.nes"
			}
		}
	]
}
